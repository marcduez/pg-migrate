{
  "name": "@marcduez/pg-migrate",
  "version": "3.0.0",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "type": "commonjs",
  "types": "./types/index.d.ts",
  "repository": "git@github.com:marcduez/pg-migrate.git",
  "author": "Marc Duez <marcduez@gmail.com>",
  "license": "MIT",
  "keywords": [
    "database",
    "pg",
    "postgres",
    "postgresql",
    "migration"
  ],
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "pg": "^8.18.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mock-fs": "^4.13.4",
    "@types/pg": "^8.16.0",
    "@types/yargs": "^17.0.35",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "jiti": "^2.6.1",
    "mock-fs": "^5.5.0",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./cjs/index.js",
      "import": "./esm/index.js",
      "default": "./esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "yarn run build:types && yarn run build:esm && yarn run build:cjs && cp package.json dist && cp README.md dist && cp LICENSE dist",
    "build:types": "tsc --build ./tsconfig.types.json",
    "build:esm": "tsc --build ./tsconfig.esm.json && cp package-esm.json dist/esm/package.json",
    "build:cjs": "tsc --build ./tsconfig.cjs.json",
    "dev:cli": "tsx src/cli.ts",
    "lint": "tsc --noEmit && prettier -c . && eslint .",
    "test": "vitest run"
  },
  "bin": "./cjs/cli.js",
  "packageManager": "yarn@4.12.0"
}
